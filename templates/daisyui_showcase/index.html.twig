{% extends 'base.html.twig' %}

{% block title %}DaisyUI — Présentation des composants{% endblock %}

{% block body %}
<div class="container mx-auto p-6 max-w-4xl">
    <h1 class="text-3xl font-bold mb-8">DaisyUI — Présentation des composants</h1>

    {# Boutons #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Boutons</h2>
        <div class="flex flex-wrap gap-2 mb-4">
            <button class="btn btn-primary">primary</button>
            <button class="btn btn-secondary">secondary</button>
            <button class="btn btn-accent">accent</button>
            <button class="btn btn-neutral">neutral</button>
            <button class="btn btn-info">info</button>
            <button class="btn btn-success">success</button>
            <button class="btn btn-warning">warning</button>
            <button class="btn btn-error">error</button>
        </div>
        <div class="flex flex-wrap gap-2 mb-4">
            <button class="btn btn-outline btn-primary">outline</button>
            <button class="btn btn-ghost">ghost</button>
        </div>
        <div class="flex flex-wrap gap-2 items-center">
            <button class="btn btn-sm btn-primary">sm</button>
            <button class="btn btn-primary">default</button>
            <button class="btn btn-lg btn-primary">lg</button>
        </div>
    </section>

    <div class="divider"></div>

    {# Badges #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Badges</h2>
        <div class="flex flex-wrap gap-2">
            <span class="badge badge-primary">primary</span>
            <span class="badge badge-secondary">secondary</span>
            <span class="badge badge-accent">accent</span>
            <span class="badge badge-ghost">ghost</span>
            <span class="badge badge-info">info</span>
            <span class="badge badge-success">success</span>
            <span class="badge badge-warning">warning</span>
            <span class="badge badge-error">error</span>
        </div>
    </section>

    <div class="divider"></div>

    {# Cartes #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Cartes</h2>
        <div class="card card-bordered bg-base-100 w-80 shadow">
            <div class="card-body">
                <h3 class="card-title">Titre de la carte</h3>
                <p>Contenu de la carte avec card-body, card-title et card-actions.</p>
                <div class="card-actions justify-end">
                    <button class="btn btn-primary btn-sm">Action</button>
                </div>
            </div>
        </div>
    </section>

    <div class="divider"></div>

    {# Alertes #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Alertes</h2>
        <div class="flex flex-col gap-2">
            <div class="alert alert-info">
                <span>Message d’information (alert-info).</span>
            </div>
            <div class="alert alert-success">
                <span>Succès (alert-success).</span>
            </div>
            <div class="alert alert-warning">
                <span>Avertissement (alert-warning).</span>
            </div>
            <div class="alert alert-error">
                <span>Erreur (alert-error).</span>
            </div>
        </div>
    </section>

    <div class="divider"></div>

    {# Formulaires #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Formulaires</h2>
        <div class="flex flex-col gap-4 max-w-md">
            <label class="form-control w-full">
                <span class="label-text">Input</span>
                <input type="text" placeholder="Placeholder" class="input input-bordered w-full">
            </label>
            <label class="form-control w-full">
                <span class="label-text">Textarea</span>
                <textarea class="textarea textarea-bordered w-full" placeholder="Contenu…" rows="2"></textarea>
            </label>
            <label class="form-control w-full">
                <span class="label-text">Select</span>
                <select class="select select-bordered w-full">
                    <option>Option 1</option>
                    <option>Option 2</option>
                </select>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" class="checkbox checkbox-primary">
                <span class="label-text">Checkbox</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" class="toggle toggle-primary">
                <span class="label-text">Toggle</span>
            </label>
            <label class="form-control w-full">
                <span class="label-text">Range</span>
                <input type="range" min="0" max="100" value="50" class="range range-primary">
            </label>
        </div>
    </section>

    <div class="divider"></div>

    {# Layout — Divider #}
    <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Layout — Divider</h2>
        <div>
            <p>Contenu au-dessus du divider.</p>
            <div class="divider">divider avec texte</div>
            <p>Contenu en dessous.</p>
        </div>
    </section>
</div>
{% endblock %}
