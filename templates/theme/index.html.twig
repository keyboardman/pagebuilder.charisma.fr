{% extends 'base.html.twig' %}

{% block title %}Thèmes{% endblock %}

{% block body %}
<div class="max-w-4xl space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold tracking-tight">Thèmes</h1>
        <a href="{{ path('app_theme_new') }}" class="btn btn-primary">Nouveau thème</a>
    </div>

    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="table-shadcn">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>YAML</th>
                        <th>CSS</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for theme in themes %}
                    <tr>
                        <td>{{ theme.name }}</td>
                        <td><code class="text-xs">{{ theme.slug ?? '-' }}</code></td>
                        <td><code class="text-xs">{{ theme.generatedYamlPath }}</code></td>
                        <td>
                            {% set cssFilename = theme.generatedCssPath|split('/')|last %}
                            <a href="{{ url('app_theme_css', { id: theme.id, filename: cssFilename }) }}" target="_blank" rel="noopener" class="text-primary hover:underline text-xs break-all" title="Lien absolu du CSS">{{ url('app_theme_css', { id: theme.id, filename: cssFilename }) }}</a>
                        </td>
                        <td class="flex gap-2">
                            <a href="{{ path('app_theme_edit', { id: theme.id }) }}" class="btn btn-sm btn-ghost">Modifier</a>
                            <form method="post" action="{{ path('app_theme_delete', { id: theme.id }) }}" onsubmit="return confirm('Supprimer ce thème ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                                <button type="submit" class="btn btn-sm btn-destructive">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="5" class="text-muted-foreground">Aucun thème.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
