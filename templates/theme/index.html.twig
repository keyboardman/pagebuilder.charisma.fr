{% extends 'base.html.twig' %}

{% block title %}Thèmes{% endblock %}

{% block body %}
<div class="max-w-4xl space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold tracking-tight">Thèmes</h1>
        <div class="flex gap-2">
            <a href="{{ path('app_theme_new') }}" class="btn btn-primary">Nouveau thème</a>
        </div>
    </div>

    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="table-shadcn">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for theme in themes %}
                    <tr>
                        <td>{{ theme.name }}</td>
                        <td><code class="text-xs">{{ theme.slug ?? '-' }}</code></td>
                        <td class="text-end">
                            <div class="flex gap-2 justify-end items-center">
                                <a href="{{ path('app_theme_edit', { id: theme.id }) }}" class="btn btn-ghost btn-sm">Polices & config</a>
                                <form method="post" action="{{ path('app_theme_delete', { id: theme.id }) }}" class="inline" onsubmit="return confirm('Supprimer le thème « {{ theme.name|e('js') }} » ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                                    <button type="submit" class="btn btn-ghost btn-sm text-destructive">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="3" class="text-muted-foreground">Aucun thème.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
