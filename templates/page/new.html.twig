{% extends 'base.html.twig' %}

{% block title %}Nouvelle page{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('pageForm') }}
{% endblock %}

{% block body %}
<div class="max-w-4xl space-y-6">
    <div>
        <a href="{{ path('app_page_index') }}" class="btn btn-ghost btn-sm mb-2">‚Üê Retour</a>
        <h1 class="text-2xl font-bold tracking-tight">Nouvelle page</h1>
    </div>

    <div
  id="page-form-root"
  data-post-url="{{ post_url }}"
  data-themes="{{ themes_for_js|json_encode|e('html_attr') }}"
  data-page=""
  data-csrf-token="{{ csrf_token('page_form') }}"
></div>
</div>
{% endblock %}
